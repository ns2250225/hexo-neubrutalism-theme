<article class="post-page">
  <header class="post-header neubrutalism-card">
    <h1 class="post-title"><%= page.title %></h1>
    
    <div class="post-meta">
      <% if (theme.post.show_date) { %>
        <time class="post-date" datetime="<%= date_xml(page.date) %>">
          <%= date(page.date, 'YYYY-MM-DD') %>
        </time>
      <% } %>
      
      <% if (theme.post.show_author && page.author) { %>
        <span class="post-author">
          By <%= page.author %>
        </span>
      <% } %>
      
      <% if (theme.post.show_categories && page.categories && page.categories.length > 0) { %>
        <div class="post-categories">
          <% page.categories.each(function(category) { %>
            <a href="<%- url_for(category.path) %>" class="category-tag">
              <%= category.name %>
            </a>
          <% }); %>
        </div>
      <% } %>
    </div>
  </header>
  
  <div class="post-content neubrutalism-card">
    <%- page.content %>
  </div>
  
  <% if (theme.post.show_tags && page.tags && page.tags.length > 0) { %>
    <div class="post-tags neubrutalism-card">
      <h3>Tags:</h3>
      <div class="tags-list">
        <% page.tags.each(function(tag) { %>
          <a href="<%- url_for(tag.path) %>" class="tag-item">
            #<%= tag.name %>
          </a>
        <% }); %>
      </div>
    </div>
  <% } %>
  
  <% if (theme.post.show_nav) { %>
    <nav class="post-navigation neubrutalism-card">
      <div class="nav-links">
        <% if (page.prev) { %>
          <a href="<%- url_for(page.prev.path) %>" class="nav-prev">
            ← <%= page.prev.title %>
          </a>
        <% } %>
        
        <% if (page.next) { %>
          <a href="<%- url_for(page.next.path) %>" class="nav-next">
            <%= page.next.title %> →
          </a>
        <% } %>
      </div>
    </nav>
  <% } %>
  
  <!-- Comments -->
  <% if (theme.comments && theme.comments.enable) { %>
    <%- partial('_partial/comments') %>
  <% } %>
</article> 