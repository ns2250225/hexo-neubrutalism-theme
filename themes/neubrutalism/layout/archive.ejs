<div class="archive-page">
  <header class="page-header neubrutalism-card">
    <h1 class="page-title">Archives</h1>
    <p class="page-description">All posts by date</p>
  </header>
  
  <div class="archives-content">
    <% let currentYear = '' %>
    <% page.posts.each(function(post) { %>
      <% const year = date(post.date, 'YYYY') %>
      <% if (year !== currentYear) { %>
        <% if (currentYear !== '') { %>
          </div>
        <% } %>
        <div class="year-group neubrutalism-card">
          <h2 class="year-title"><%= year %></h2>
          <div class="year-posts">
        <% currentYear = year %>
      <% } %>
      
      <article class="archive-post">
        <time class="post-date" datetime="<%= date_xml(post.date) %>">
          <%= date(post.date, 'MM-DD') %>
        </time>
        <a href="<%- url_for(post.path) %>" class="post-title">
          <%= post.title %>
        </a>
      </article>
    <% }); %>
    
    <% if (currentYear !== '') { %>
      </div>
    </div>
    <% } %>
  </div>
</div> 